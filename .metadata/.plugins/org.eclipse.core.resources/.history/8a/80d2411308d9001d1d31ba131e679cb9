package ui;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.StandardOpenOption;

public class ExceptionLogger {

	private static ExceptionLogger instance = null;

	public static ExceptionLogger getInstance() {

		if (instance == null) {
			instance = new ExceptionLogger();
		}
		return instance;
	}

	private ExceptionLogger() {

	}

	public synchronized void Log(Exception ex) {

		try { 
			// TODO: Write to logfile
			Files.write(Path.of("cafesanchezlog.txt"), ex.getMessage().getBytes(), StandardOpenOption.CREATE, StandardOpenOption.APPEND);
			
//			File log = new File("cafesanchezlog.txt");
//
//			try (FileWriter logWriter = new FileWriter(log)) {
//				logWriter.append(ex.getMessage());
//			}

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
